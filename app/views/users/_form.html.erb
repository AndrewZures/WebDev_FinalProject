<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :name %>
  </div><br>
  <div class="field">
    <%= f.label "First Name" %>
    <%= f.text_field :fname %>
  </div><br>
  <div class="field">
    <%= f.label :lname %>
    <%= f.text_field :lname %>
  </div><br />
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div><br />
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div><br />
  <div class="field">
    <%= f.label :about %>
    <%= f.text_field :about %>
  </div><br />
  <div class="field">
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div><br />
  <div class="field">
    <% if @user.password_digest.blank? %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <% else %>
    <%= f.hidden_field :password %>
    <% end %>
  </div><br />
  <div class="actions">
    <%= f.submit "Sign Up"%>
  </div>
<% end %>
