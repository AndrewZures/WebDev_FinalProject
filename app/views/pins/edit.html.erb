<h1>Editing pin</h1>

<%= form_tag('/pins/:id', :method => :put) do %>

  <div class="field">
    <%= label_tag :board_id %><br />
    <%= collection_select :post, :board_id, Board.all, :id, :name %>
  </div>

  <div class="field">
    <%= label_tag :url %><br />
    <%= text_field_tag :url, @pin.url %>
  </div>
  <div class="field">
    <%= label_tag :description %><br />
    <%= text_field_tag :description, @pin.description %>
  </div>

  <div>
  	<%= hidden_field_tag :pin_id, @pin.id %>

  <div class="actions">
    <%= submit_tag %>
  </div>
  <% end %>

<%= link_to 'Show', @pin %> |
<%= link_to 'Back', pins_path %>
